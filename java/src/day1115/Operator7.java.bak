/*
	대입연산자
	=,
	+=, -=, *=, /=, %=
	<<=, >>=, >>>=
	&=, |=, ^=
*/

class Operator7 {
	public static void mian(String[] args) {

		int i=3;//대입
		//산술대입
		i+=2; // i= i+2; 5
		i-=1;//i = i -1; 4
		i*=2;//i = i*2;8
		i/=3;// i = i /2; 정수/정수=정수
		i%=3;//i = i %3;
		
		//쉬프트 대입
		i<<=4; //i=i <<4; // 0000 0010 << 4 =0010 0000
		i>>=1;//i = i >>1; // 0010 0000 >> 1 = 0001 0000
		i>>>=2;// i = i >>>2; //0002 0000 >>>2 =0000 0100
		
		//비트논리 대입
		i &=12; //i = i & 12;// 0100 & 1100= 0100
		i |= 11; // i = i | 11; //  0100 | 1011
		i ^= 5; //i = i ^ 5; // 1111 ^ 0101 = 1010
		System.out.println(i);

	}//main
}//class
